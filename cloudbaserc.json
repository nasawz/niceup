{
  "envId": "{{env.ENV_ID}}",
  "version": "2.0",
  "$schema": "https://framework-1258016615.tcloudbaseapp.com/schema/latest.json",
  "framework": {
    "name": "niceup-manage",
    "hooks": {
      "postDeploy": {
        "type": "callFunction",
        "functions": [
          {
            "functionName": "db-init"
          }
        ]
      }
    },
    "plugins": {
      "auth": {
        "use": "@cloudbase/framework-plugin-auth",
        "inputs": {
          "configs": [
            {
              "platform": "NONLOGIN",
              "status": "ENABLE"
            }
          ]
        }
      },
      "manage": {
        "use": "@cloudbase/framework-plugin-website@1.9.6",
        "inputs": {
          "installCommand": "echo 'Skip Install'",
          "buildCommand": "echo 'npm run build'",
          "outputPath": "manage/build",
          "cloudPath": "{{env.deployManagePath}}",
          "ignore": [
            ".git",
            ".github",
            "node_modules",
            "cloudbaserc.js"
          ]
        }
      },
      "function": {
        "use": "@cloudbase/framework-plugin-function",
        "inputs": {
          "functionRootPath": "cloud/functions",
          "functions": [
            {
              "name": "db-init",
              "timeout": 60,
              "envVariables": {
                "ADMIN_USER_NAME": "{{env.administratorName}}",
                "ADMIN_PASS_WORD": "{{env.administratorPassword}}"
              },
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "openid",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "auth",
              "timeout": 60,
              "installDependency": true,
              "envVariables": {
                "PRIVATE_KEY_ID": "{{env.private_key_id}}",
                "PRIVATE_KEY": "{{env.private_key}}"
              },
              "handler": "index.main"
            },
            {
              "name": "aggregate-psn",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "aggregate-sales",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "batch-update-order",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "batch-update-product",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "batch-update-psn",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "fetch-kdy",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "get-all-product",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "get-order",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "get-orders",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "mini-proxy",
              "timeout": 60,
              "envVariables": {
                "APPID": "mini_appid",
                "APPSECRET": "mini_privateKey"
              },
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "pay",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "pay_cb",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "refund",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "submit_order",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            },
            {
              "name": "subscribe-message",
              "timeout": 60,
              "installDependency": true,
              "handler": "index.main"
            }
          ],
          "servicePaths": {
            "auth": "/auth"
          }
        }
      },
      "db": {
        "use": "@cloudbase/framework-plugin-database",
        "inputs": {
          "collections": [
            {
              "collectionName": "AccessToken",
              "aclTag": "PRIVATE"
            },
            {
              "collectionName": "Admin",
              "aclTag": "PRIVATE"
            },
            {
              "collectionName": "Auth",
              "aclTag": "READONLY"
            },
            {
              "collectionName": "File",
              "aclTag": "CUSTOM",
              "aclRule": {
                "read": true,
                "write": "auth.uid in get(`database.Admin.user`).admin"
              }
            },
            {
              "collectionName": "Freight",
              "aclTag": "CUSTOM",
              "aclRule": {
                "read": true,
                "write": "auth.uid in get(`database.Admin.user`).admin"
              }
            },
            {
              "collectionName": "Kv",
              "aclTag": "CUSTOM",
              "aclRule": {
                "read": true,
                "write": "auth.uid in get(`database.Admin.user`).admin"
              }
            },
            {
              "collectionName": "Notice",
              "aclTag": "CUSTOM",
              "aclRule": {
                "read": true,
                "write": "auth.uid in get(`database.Admin.user`).admin"
              }
            },
            {
              "collectionName": "Order",
              "aclTag": "PRIVATE"
            },
            {
              "collectionName": "PayRecord",
              "aclTag": "PRIVATE"
            },
            {
              "collectionName": "Product",
              "aclTag": "CUSTOM",
              "aclRule": {
                "read": true,
                "write": "auth.uid in get(`database.Admin.user`).admin"
              }
            },
            {
              "collectionName": "Psn",
              "aclTag": "CUSTOM",
              "aclRule": {
                "read": true,
                "write": "auth.uid in get(`database.Admin.user`).admin"
              }
            },
            {
              "collectionName": "RefundRecord",
              "aclTag": "PRIVATE"
            },
            {
              "collectionName": "Spec",
              "aclTag": "CUSTOM",
              "aclRule": {
                "read": true,
                "write": "auth.uid in get(`database.Admin.user`).admin"
              }
            },
            {
              "collectionName": "Tag",
              "aclTag": "CUSTOM",
              "aclRule": {
                "read": true,
                "write": "auth.uid in get(`database.Admin.user`).admin"
              }
            },
            {
              "collectionName": "User",
              "aclTag": "READONLY"
            }
          ]
        }
      }
    },
    "requirement": {
      "environment": {
        "administratorName": {
          "description": "管理员账号，字母和数字的组合，不能为纯数字，长度范围是 1 ~ 32",
          "required": true,
          "validation": {
            "rule": {
              "type": "RegExp",
              "pattern": "^[a-zA-Z0-9]+[a-zA-Z0-9_-]?[a-zA-Z0-9]+$",
              "flag": "g"
            },
            "errorMessage": "账号不符合规范"
          }
        },
        "administratorPassword": {
          "description": "管理员密码，长度必需大于 8 位，不能由纯数字或纯字母组成",
          "required": true,
          "validation": {
            "rule": {
              "type": "RegExp",
              "pattern": "[^a-zA-Z]",
              "flag": ""
            },
            "errorMessage": "密码不符合规范"
          }
        },
        "deployManagePath": {
          "description": "部署路径",
          "required": true,
          "default": "/manage/"
        },
        "private_key_id": {
          "description": "自定义登录密钥ID"
        },
        "private_key": {
          "description": "自定义登录密钥Key"
        }
      }
    }
  },
  "functionRoot": "./functions",
  "functions": [],
  "region": "ap-shanghai"
}
